<Window x:Class="TopoCentras.Wpf.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:views="clr-namespace:TopoCentras.Wpf.Views"
        Title="TopoCentras"
        Height="450" Width="900"
        WindowStartupLocation="CenterScreen">

    <TabControl SelectionChanged="OnTabSelectionChanged">
        <TabItem Header="Užsakymai">
            <views:UzsakymaiView DataContext="{Binding UzsakymaiVM}" />
        </TabItem>
        <TabItem Header="Prekes">
            <views:PrekesView DataContext="{Binding PrekesVM}" />
        </TabItem>
        <TabItem Header="Klientai">
            <views:KlientaiView DataContext="{Binding KlientaiVM}" />
        </TabItem>
    </TabControl>

</Window>